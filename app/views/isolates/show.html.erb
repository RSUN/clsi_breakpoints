<% @title = "Showing isolate" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-horizontal">
                <div class="form-group">
          <label class="col-md-2 form-label">Isolate</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @isolate.isolate_id %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Collection</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @isolate.collection %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Site</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @isolate.site %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Study year</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @isolate.study_year %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Bank</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @isolate.bank %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Organism code</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>		    
              <%= @isolate.organism_code %>
            </span>
          </div>
        </div>

                <div class="form-actions col-md-offset-2">
          <%= link_to fa_icon_tag("pencil") + ' Edit', edit_isolate_path(@isolate), class: 'btn btn-primary' %>
          <%= link_to 'Back', isolates_path, class: 'btn' %>
        </div>
      </div>
    </div>
  </div>
</div>
