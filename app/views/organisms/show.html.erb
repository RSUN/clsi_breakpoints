<% @title = "Showing organism" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-horizontal">
                <div class="form-group">
          <label class="col-md-2 form-label">Code</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.code %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Name</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.name %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Species</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.species %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Sub species</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.sub_species %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Organism group</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.organism_group %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Master group</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.master_group %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Viridans group</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.viridans_group %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Level1</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.level1 %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Level2</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.level2 %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Level3</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.level3 %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Level4</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @organism.level4 %>
            </span>
          </div>
        </div>

                <div class="form-actions col-md-offset-2">
          <%= link_to fa_icon_tag("pencil") + ' Edit', edit_organism_path(@organism), class: 'btn btn-primary' %>
          <%= link_to 'Back', organisms_path, class: 'btn' %>
        </div>
      </div>
    </div>
  </div>
</div>