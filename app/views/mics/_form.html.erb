
<%= form_for(@mic, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :isolate do |f| %>
      <%= f.label :isolate, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :isolate, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :drug do |f| %>
      <%= f.label :drug, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :drug, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :value do |f| %>
      <%= f.label :value, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :value, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :edge do |f| %>
      <%= f.label :edge, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :edge, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", mics_path, class: 'btn' %>
  </div>
<% end %>

