<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table" id="micsdatatable">
            <thead>
              <tr>
                                <th>Isolate</th>
                                <th>Drug</th>
                                <th>Value</th>
                                <th>Edge</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @mics.each do |mic| %>
              <tr>
                                <td><%= mic.isolate_id %></td>
                                <td><%= Drug.find_by(drugid: mic.drug_id).name %></td>
                                <td><%= mic.value %></td>
                                <td><%= mic.edge %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), mic, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_mic_path(mic), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), mic, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @mics.length == 0 %>
              <tr><td colspan=42 class='text-center'>No mics.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>