<% @title = "Showing drug" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-horizontal">
                <div class="form-group">
          <label class="col-md-2 form-label">Id</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @drug.id %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Name</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @drug.name %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Description</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @drug.description %>
            </span>
          </div>
        </div>

                <div class="form-actions col-md-offset-2">
          <%= link_to fa_icon_tag("pencil") + ' Edit', edit_drug_path(@drug), class: 'btn btn-primary' %>
          <%= link_to 'Back', drugs_path, class: 'btn' %>
        </div>
      </div>
    </div>
  </div>
</div>