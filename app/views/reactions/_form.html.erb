        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :footnote do |f| %>
      <%= f.label :footnote, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :footnote, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :eligible_interpretations do |f| %>
