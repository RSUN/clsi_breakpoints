
<%= form_for(@reaction, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :authority do |f| %>
      <%= f.label :authority, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :authority, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :publication do |f| %>
      <%= f.label :publication, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :publication, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :delivery_mechanism do |f| %>
      <%= f.label :delivery_mechanism, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :delivery_mechanism, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :infection_type do |f| %>
      <%= f.label :infection_type, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :infection_type, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :isolate_id do |f| %>
      <%= f.label :isolate_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :isolate_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :drug_id do |f| %>
      <%= f.label :drug_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :drug_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :reaction do |f| %>
      <%= f.label :reaction, class: 'control-label col-md-2' %>
