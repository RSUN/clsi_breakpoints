        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :used_surrogate_rule_type do |f| %>
      <%= f.label :used_surrogate_rule_type, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :used_surrogate_rule_type, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", reactions_path, class: 'btn' %>
  </div>
<% end %>

