      <div class='col-md-8'>
        <%= f.text_field :eligible_interpretations, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :rule_row_number do |f| %>
      <%= f.label :rule_row_number, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :rule_row_number, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :used_surrogate_drug_id do |f| %>
      <%= f.label :used_surrogate_drug_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :used_surrogate_drug_id, class: 'form-control' %>
