<% @title = "Listing reactions" %>

<% content_for :description do %>
<p>Test results go here after import</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_reaction_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Reaction
<% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Authority</th>
                                <th>Publication</th>
                                <th>Delivery mechanism</th>
                                <th>Infection type</th>
                                <th>Isolate</th>
                                <th>Drug</th>
                                <th>Reaction</th>
                                <th>Footnote</th>
                                <th>Eligible interpretations</th>
                                <th>Rule row number</th>
                                <th>Used surrogate drug</th>
                                <th>Used surrogate drug ordinal</th>
                                <th>Used surrogate rule type</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @reactions.each do |reaction| %>
              <tr>
                                <td><%= reaction.authority %></td>
                                <td><%= reaction.publication %></td>
                                <td><%= reaction.delivery_mechanism %></td>
                                <td><%= reaction.infection_type %></td>
                                <td><%= reaction.isolate_id %></td>
                                <td><%= reaction.drug_id %></td>
                                <td><%= reaction.reaction %></td>
                                <td><%= reaction.footnote %></td>
                                <td><%= reaction.eligible_interpretations %></td>
                                <td><%= reaction.rule_row_number %></td>
                                <td><%= reaction.used_surrogate_drug_id %></td>
                                <td><%= reaction.used_surrogate_drug_ordinal %></td>
                                <td><%= reaction.used_surrogate_rule_type %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), reaction, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_reaction_path(reaction), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), reaction, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @reactions.length == 0 %>
              <tr><td colspan=42 class='text-center'>No reactions.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>